<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8">
    </head>

    <body>
        <script>
            alert('Hello JavaScript');
            //課題
            //1,2

            var number = prompt('please enter');

            if(number>0){
                alert('正の数');
            }else if(number<0){
                alert('負の数');
            }else{
                alert('数値を入力してください');
            }

            //3,4,5
            var animal=['パンダ','ライオン','キリン'];

            var animals=prompt('パンダ、ライオン、キリンから選んでください');

            var i = 0;
            while (i<animal.length){

                if(animals == animal[1]){
                    alert(animal[1]);
                    break;
                }
                alert(animal[i]);
                i++;
            }

            //6,7
            var animal2 = [
                {'name':'パンダ','weight':80},
                {'name':'ライオン','weight':200},
                {'name':'キリン','weight':300}
            ];

            var animals2 = prompt('パンダ、ライオン、キリンから選んでください');

            var i =0;
            while(i<animal2.length){

                if(animals2 == animal2[i].name){
                    alert(animal2[i].weight);
                    break;
                }
            i++;
            }

            //8

            var radius = prompt('Enter your radius');

            function circle(radius){
                return radius*radius*3.14;
            }

            alert(circle(radius));
        </script>
    </body>
</html>
